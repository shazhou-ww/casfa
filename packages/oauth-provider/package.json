{
  "name": "@casfa/oauth-provider",
  "version": "0.1.0",
  "description": "OAuth 2.1 authorization server: metadata, authorization codes, client registration, token grants, dual-auth",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun ../../scripts/build-pkg.ts",
    "test": "bun run test:unit",
    "test:unit": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "check": "tsc --noEmit && biome check .",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@casfa/client-auth-crypto": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
