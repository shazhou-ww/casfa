{
  "name": "@casfa/explorer",
  "version": "0.1.0",
  "description": "CASFA file explorer React component",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core/sync-manager": {
      "bun": "./src/core/sync-manager.ts",
      "types": "./dist/core/sync-manager.d.ts",
      "import": "./dist/core/sync-manager.js"
    },
    "./core/sync-coordinator": {
      "bun": "./src/core/sync-coordinator.ts",
      "types": "./dist/core/sync-coordinator.d.ts",
      "import": "./dist/core/sync-coordinator.js"
    },
    "./core/merge-handler": {
      "bun": "./src/core/merge-handler.ts",
      "types": "./dist/core/merge-handler.d.ts",
      "import": "./dist/core/merge-handler.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun ../../scripts/build-pkg.ts",
    "test": "bun run test:unit",
    "test:unit": "bun test src/core/",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "check": "tsc --noEmit && biome check .",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0"
  },
  "peerDependencies": {
    "@casfa/client": "workspace:*",
    "@casfa/core": "workspace:*",
    "@casfa/dag-diff": "workspace:*",
    "@casfa/encoding": "workspace:*",
    "@casfa/fs": "workspace:*",
    "@casfa/protocol": "workspace:*",
    "@mui/material": "^6.0.0",
    "@mui/icons-material": "^6.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "buildConfig": {
    "bunFlags": [
      "--external",
      "@mui/*",
      "--external",
      "react",
      "--external",
      "react-dom",
      "--external",
      "react/jsx-runtime",
      "--external",
      "zod",
      "--external",
      "zustand",
      "--external",
      "zustand/*",
      "--target=browser",
      "--production"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
