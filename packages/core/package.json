{
  "name": "@casfa/core",
  "version": "0.3.0",
  "description": "CAS binary format encoding/decoding - self-similar B-Tree node structure",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun ../../scripts/build-pkg.ts",
    "test": "bun run test:unit",
    "test:unit": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@casfa/encoding": "workspace:*",
    "@casfa/storage-core": "workspace:*"
  },
  "devDependencies": {
    "@noble/hashes": "^1.7.1",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
