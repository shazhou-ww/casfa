{
  "name": "@casfa/server",
  "version": "0.1.0",
  "private": true,
  "description": "CASFA Server - Content-Addressable Storage for Agents",
  "type": "module",
  "main": "backend/dist/handler.mjs",
  "scripts": {
    "dev": "bun run backend/scripts/dev.ts",
    "dev:simple": "bun run backend/server.ts",
    "dev:minimal": "bun run backend/scripts/dev.ts --preset test --no-frontend",
    "dev:aws": "bun run backend/scripts/dev.ts --preset aws",
    "dev:setup": "bun run backend/scripts/dev-setup.ts",
    "clean": "rimraf .turbo backend/dist backend/public .aws-sam",
    "build": "bun run build:frontend && bun run build:backend",
    "build:frontend": "bunx vite build --config frontend/vite.config.ts",
    "build:backend": "bun run backend/scripts/build.ts",
    "sam:build": "bun run build && sam build",
    "sam:local": "sam local start-api --port 3560",
    "sam:deploy": "sam deploy",
    "deploy:frontend": "aws s3 sync backend/public/ s3://$(aws cloudformation describe-stacks --stack-name casfa-prod --query 'Stacks[0].Outputs[?OutputKey==`FrontendBucketName`].OutputValue' --output text) --delete && aws cloudfront create-invalidation --distribution-id $(aws cloudformation describe-stacks --stack-name casfa-prod --query 'Stacks[0].Outputs[?OutputKey==`CloudFrontDistributionId`].OutputValue' --output text) --paths '/*'",
    "deploy:all": "bun run sam:build && (sam deploy || true) && bun run deploy:frontend",
    "deploy:staging": "sam deploy --config-env staging",
    "deploy:staging:all": "bun run sam:build && (sam deploy --config-env staging || true) && bun run deploy:frontend:staging",
    "deploy:frontend:staging": "aws s3 sync backend/public/ s3://$(aws cloudformation describe-stacks --stack-name casfa-staging --query 'Stacks[0].Outputs[?OutputKey==`FrontendBucketName`].OutputValue' --output text) --delete && aws cloudfront create-invalidation --distribution-id $(aws cloudformation describe-stacks --stack-name casfa-staging --query 'Stacks[0].Outputs[?OutputKey==`CloudFrontDistributionId`].OutputValue' --output text) --paths '/*'",
    "logs": "sam logs -n CasfaFunction --stack-name casfa-prod --tail",
    "logs:staging": "sam logs -n CasfaFunction --stack-name casfa-staging --tail",
    "status": "aws cloudformation describe-stacks --stack-name casfa-prod --query 'Stacks[0].{Status:StackStatus,Updated:LastUpdatedTime}' --output table",
    "status:staging": "aws cloudformation describe-stacks --stack-name casfa-staging --query 'Stacks[0].{Status:StackStatus,Updated:LastUpdatedTime}' --output table",
    "test": "bun run test:unit && bun run test:e2e",
    "test:unit": "bun test backend/tests",
    "test:e2e": "bun run backend/scripts/integration-test.ts",
    "test:e2e:debug": "bun run backend/scripts/integration-test.ts --no-cleanup --keep-container",
    "db:create": "bun run backend/scripts/create-local-tables.ts",
    "db:create:test": "bun run backend/scripts/create-local-tables.ts --port 8701",
    "db:delete": "bun run backend/scripts/create-local-tables.ts --delete",
    "dev:clean": "bun run backend/scripts/dev-clean.ts",
    "dev:clean:dry": "bun run backend/scripts/dev-clean.ts --dry-run",
    "setup:aws": "bun run backend/scripts/setup-aws.ts",
    "set-admin": "bun run backend/scripts/set-admin.ts",
    "set-admin:aws": "bun run backend/scripts/set-admin.ts --aws",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "check": "tsc --noEmit && biome check ."
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.975.0",
    "@aws-sdk/client-dynamodb": "^3.975.0",
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/lib-dynamodb": "^3.975.0",
    "@casfa/cas-uri": "workspace:*",
    "@casfa/client": "workspace:*",
    "@casfa/client-bridge": "workspace:*",
    "@casfa/client-sw": "workspace:*",
    "@casfa/core": "workspace:*",
    "@casfa/dag-diff": "workspace:*",
    "@casfa/delegate": "workspace:*",
    "@casfa/delegate-token": "workspace:*",
    "@casfa/encoding": "workspace:*",
    "@casfa/explorer": "workspace:*",
    "@casfa/fs": "workspace:*",
    "@casfa/proof": "workspace:*",
    "@casfa/protocol": "workspace:*",
    "@casfa/storage-cached": "workspace:*",
    "@casfa/storage-core": "workspace:*",
    "@casfa/storage-fs": "workspace:*",
    "@casfa/storage-http": "workspace:*",
    "@casfa/storage-indexeddb": "workspace:*",
    "@casfa/storage-memory": "workspace:*",
    "@casfa/storage-s3": "workspace:*",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hono/zod-validator": "^0.4.1",
    "@mui/icons-material": "^6.5.0",
    "@mui/material": "^6.5.0",
    "@noble/hashes": "^1.7.2",
    "amazon-cognito-identity-js": "^6.3.12",
    "hono": "^4.6.0",
    "ioredis": "^5.9.3",
    "jose": "^6.1.3",
    "pdfjs-dist": "^5.4.624",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "zod": "3",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/bun": "latest",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "commander": "^14.0.3",
    "typescript": "^5.7.2",
    "vite": "^6.0.0"
  }
}
