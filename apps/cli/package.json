{
  "name": "@casfa/cli",
  "version": "0.0.1",
  "description": "CLI for CASFA content-addressable storage service",
  "type": "module",
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "bin": {
    "casfa": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "bun src/cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "check": "tsc --noEmit && biome check .",
    "test:e2e": "bun run scripts/e2e-test.ts",
    "test:e2e:debug": "bun run scripts/e2e-test.ts --no-cleanup --keep-container",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@casfa/core": "workspace:*",
    "@casfa/client": "workspace:*",
    "@casfa/protocol": "workspace:*",
    "@noble/hashes": "^2.0.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "enquirer": "^2.4.1",
    "open": "^10.1.0",
    "ora": "^8.1.0",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.975.0",
    "@types/bun": "latest",
    "@types/node": "^22.5.0",
    "typescript": "^5.5.4"
  },
  "keywords": [
    "casfa",
    "cli",
    "content-addressable-storage",
    "cas",
    "agent"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
