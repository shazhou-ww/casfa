{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Workspace paths â€” resolve @casfa/* to source for dev & IDE
    "paths": {
      "@casfa/cas-uri": ["./packages/cas-uri/src/index.ts"],
      "@casfa/client": ["./packages/client/src/index.ts"],
      "@casfa/client/types": ["./packages/client/src/types/index.ts"],
      "@casfa/client/api": ["./packages/client/src/api/index.ts"],
      "@casfa/client-auth-crypto": ["./packages/client-auth-crypto/src/index.ts"],
      "@casfa/core": ["./packages/core/src/index.ts"],
      "@casfa/delegate": ["./packages/delegate/src/index.ts"],
      "@casfa/delegate-token": ["./packages/delegate-token/src/index.ts"],
      "@casfa/proof": ["./packages/proof/src/index.ts"],
      "@casfa/protocol": ["./packages/protocol/src/index.ts"],
      "@casfa/storage-core": ["./packages/storage-core/src/index.ts"],
      "@casfa/storage-fs": ["./packages/storage-fs/src/index.ts"],
      "@casfa/storage-memory": ["./packages/storage-memory/src/index.ts"],
      "@casfa/storage-s3": ["./packages/storage-s3/src/index.ts"],
      "@casfa/client-bridge": ["./packages/client-bridge/src/index.ts"],
      "@casfa/client-sw": ["./packages/client-sw/src/index.ts"],
      "@casfa/explorer": ["./packages/explorer/src/index.ts"],
      "@casfa/explorer/core/sync-manager": ["./packages/explorer/src/core/sync-manager.ts"],
      "@casfa/explorer/core/sync-coordinator": ["./packages/explorer/src/core/sync-coordinator.ts"],
      "@casfa/fs": ["./packages/fs/src/index.ts"],
      "@casfa/storage-http": ["./packages/storage-http/src/index.ts"],
      "@casfa/storage-indexeddb": ["./packages/storage-indexeddb/src/index.ts"],
      "@casfa/storage-cached": ["./packages/storage-cached/src/index.ts"]
    },

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  }
}
